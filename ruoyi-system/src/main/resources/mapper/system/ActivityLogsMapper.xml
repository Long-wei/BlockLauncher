<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ActivityLogsMapper">
    
    <resultMap type="ActivityLogs" id="ActivityLogsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="actionType"    column="action_type"    />
        <result property="targetType"    column="target_type"    />
        <result property="targetId"    column="target_id"    />
        <result property="description"    column="description"    />
        <result property="ipAddress"    column="ip_address"    />
        <result property="userAgent"    column="user_agent"    />
        <result property="metadata"    column="metadata"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectActivityLogsVo">
        select id, user_id, action_type, target_type, target_id, description, ip_address, user_agent, metadata, created_at from activity_logs
    </sql>

    <select id="selectActivityLogsList" parameterType="ActivityLogs" resultMap="ActivityLogsResult">
        <include refid="selectActivityLogsVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="actionType != null  and actionType != ''"> and action_type = #{actionType}</if>
            <if test="targetType != null  and targetType != ''"> and target_type = #{targetType}</if>
            <if test="targetId != null "> and target_id = #{targetId}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="ipAddress != null  and ipAddress != ''"> and ip_address = #{ipAddress}</if>
            <if test="userAgent != null  and userAgent != ''"> and user_agent = #{userAgent}</if>
            <if test="metadata != null  and metadata != ''"> and metadata = #{metadata}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
        </where>
    </select>
    
    <select id="selectActivityLogsById" parameterType="Long" resultMap="ActivityLogsResult">
        <include refid="selectActivityLogsVo"/>
        where id = #{id}
    </select>

    <insert id="insertActivityLogs" parameterType="ActivityLogs" useGeneratedKeys="true" keyProperty="id">
        insert into activity_logs
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="actionType != null and actionType != ''">action_type,</if>
            <if test="targetType != null">target_type,</if>
            <if test="targetId != null">target_id,</if>
            <if test="description != null">description,</if>
            <if test="ipAddress != null">ip_address,</if>
            <if test="userAgent != null">user_agent,</if>
            <if test="metadata != null">metadata,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="actionType != null and actionType != ''">#{actionType},</if>
            <if test="targetType != null">#{targetType},</if>
            <if test="targetId != null">#{targetId},</if>
            <if test="description != null">#{description},</if>
            <if test="ipAddress != null">#{ipAddress},</if>
            <if test="userAgent != null">#{userAgent},</if>
            <if test="metadata != null">#{metadata},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateActivityLogs" parameterType="ActivityLogs">
        update activity_logs
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="actionType != null and actionType != ''">action_type = #{actionType},</if>
            <if test="targetType != null">target_type = #{targetType},</if>
            <if test="targetId != null">target_id = #{targetId},</if>
            <if test="description != null">description = #{description},</if>
            <if test="ipAddress != null">ip_address = #{ipAddress},</if>
            <if test="userAgent != null">user_agent = #{userAgent},</if>
            <if test="metadata != null">metadata = #{metadata},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteActivityLogsById" parameterType="Long">
        delete from activity_logs where id = #{id}
    </delete>

    <delete id="deleteActivityLogsByIds" parameterType="String">
        delete from activity_logs where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>